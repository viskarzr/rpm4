<Window x:Class="rpm4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:rpm4"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="500" ResizeMode="NoResize">
    <Grid>
        <Menu VerticalAlignment="Top" Grid.ColumnSpan="2">
            <MenuItem Header="Файл">
                <MenuItem x:Name="miExit" Header="Выход" ToolTip="Это кнопка выхода" Click="btnExit_Click"></MenuItem>
            </MenuItem>
            <MenuItem Header="Справка">
                <MenuItem x:Name="miAbout" Header="О программе" ToolTip="Это кнопка расскажет о программе и её создателе" Click="btnAbout_Click">
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Команды">
                <MenuItem x:Name="miFull" Header="Заполнить" ToolTip="Данная кнопка заполняет таблицу рандомными значениями"  ></MenuItem>
                <MenuItem x:Name="miCalc" Header="Вычислить" ToolTip="Эта кнопка воспроизводит расчёт по заданию"  ></MenuItem>
                <MenuItem x:Name="miCleanAll" Header="Очистить все поля программы" ToolTip="Эта кнопка очищает все поля программы" ></MenuItem>
            </MenuItem>
        </Menu>
        <GroupBox Header=" Создание треугольника " Margin="0,20,0,0" Grid.ColumnSpan="1" Grid.RowSpan="1">
            <StackPanel Margin="0,10,0,0">
                <Label Content="Первая сторона треугольника"/>
                <TextBox TextWrapping="Wrap" Width="200"/>
                <Label Content="Вторая сторона треугольника"/>
                <TextBox TextWrapping="Wrap" Width="200"/>
                <Label Content="Третья сторона треугольника"/>
                <TextBox TextWrapping="Wrap" Width="200"/>
            </StackPanel>
        </GroupBox>
        <StackPanel Grid.Column="1" Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button x:Name="btnAbout" Content="О программе" HorizontalAlignment="Center" Margin="10,10,10,10" Click="btnAbout_Click"/>
            <Button x:Name="btnExit" Content="Выход" HorizontalAlignment="Center" Margin="10,10,10,10" Click="btnExit_Click"/>
        </StackPanel>
        <GroupBox Grid.Column="1" Header="Работа с треугольником" Margin="0,20,0,0" />
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

    </Grid>
</Window>
